@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-4">

    <h2 class="text-center fw-bold mb-5">Admin Paneline Hoş Geldiniz</h2>

    <div class="row g-4">

        <!-- ÜYELER -->
        <div class="col-md-3">
            <div class="admin-card shadow-sm p-4 text-center rounded">
                <h3 class="stat-number">@ViewBag.ToplamUye</h3>
                <p class="stat-label">Toplam Üye</p>

                <button class="menu-toggle manage-btn" data-target="#uyeMenu">Yönet</button>

                <div id="uyeMenu" class="submenu">
                    <a href="/Admin/Uye" class="submenu-item">Listele</a>
                </div>
            </div>
        </div>

        <!-- ANTRENÖR -->
        <div class="col-md-3">
            <div class="admin-card shadow-sm p-4 text-center rounded">
                <h3 class="stat-number">@ViewBag.ToplamAntrenor</h3>
                <p class="stat-label">Antrenör Sayısı</p>

                <button class="menu-toggle manage-btn" data-target="#antrenorMenu">Yönet</button>

                <div id="antrenorMenu" class="submenu">
                    <a href="/Admin/Antrenor" class="submenu-item">Listele</a>
                    <a href="/Admin/Antrenor/Create" class="submenu-item">Ekle</a>
                </div>
            </div>
        </div>

        <!-- HİZMETLER -->
        <div class="col-md-3">
            <div class="admin-card shadow-sm p-4 text-center rounded">
                <h3 class="stat-number">@ViewBag.ToplamHizmet</h3>
                <p class="stat-label">Hizmet Sayısı</p>

                <button class="menu-toggle manage-btn" data-target="#hizmetMenu">Yönet</button>

                <div id="hizmetMenu" class="submenu">
                    <a href="/Admin/Hizmet" class="submenu-item">Listele</a>
                    <a href="/Admin/Hizmet/Create" class="submenu-item">Ekle</a>
                </div>
            </div>
        </div>

        <!-- RANDEVULAR -->
        <div class="col-md-3">
            <div class="admin-card shadow-sm p-4 text-center rounded">
                <h3 class="stat-number">@ViewBag.BugunRandevu</h3>
                <p class="stat-label">Bugünkü Randevular</p>

                <button class="menu-toggle manage-btn" data-target="#randevuMenu">Yönet</button>

                <div id="randevuMenu" class="submenu">
                    <a href="/Admin/Randevu" class="submenu-item">Bugünkü Randevular</a>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- JS: Alt menü aç/kapa -->
<script>
    document.querySelectorAll(".menu-toggle").forEach(btn => {
        btn.addEventListener("click", function () {
            const div = document.querySelector(this.dataset.target);
            div.style.display = (div.style.display === "block") ? "none" : "block";
        });
    });
</script>

<style>
    /* Kart genel tasarım */
    .admin-card {
        background: white;
        border-left: 6px solid #116062;
        transition: 0.3s ease;
    }

        .admin-card:hover {
            transform: scale(1.04);
            box-shadow: 0 0 20px rgba(0,0,0,0.15);
        }

    .stat-number {
        font-size: 2.4rem;
        font-weight: 700;
        color: #116062;
    }

    .stat-label {
        font-size: 1.1rem;
        color: #333;
        margin-bottom: 15px;
    }

    /* Yönet Butonu */
    .manage-btn {
        width: 100%;
        padding: 10px;
        background: #116062;
        border: none;
        color: white;
        border-radius: 30px;
        transition: 0.3s ease;
        font-weight: 600;
    }

        .manage-btn:hover {
            background: #0d4d50;
            transform: scale(1.03);
        }

    /* Alt açılır menü */
    .submenu {
        display: none;
        margin-top: 10px;
    }

    .submenu-item {
        display: block;
        padding: 10px;
        background: #f3f3f3;
        margin-bottom: 8px;
        border-radius: 8px;
        text-align: center;
        color: #116062;
        font-weight: 600;
        text-decoration: none;
        transition: 0.2s;
    }

        .submenu-item:hover {
            background: #116062;
            color: white;
        }
</style>
