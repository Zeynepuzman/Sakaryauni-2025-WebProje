@model IEnumerable<WebProje_B231210095.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Hizmet Yönetimi</h2>

        <a asp-action="Create" class="btn custom-btn rounded-pill px-4">
            + Yeni Hizmet
        </a>
    </div>

    <div class="row g-4">
        @foreach (var hizmet in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm p-4 h-100 hizmet-card">
                    <h5 class="fw-bold text-teal">@hizmet.Ad</h5>

                    <p class="text-muted mt-2">
                        Süre: @hizmet.SureDakika dk
                    </p>

                    <p>@hizmet.Aciklama</p>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit"
                           asp-route-id="@hizmet.Id"
                           class="btn btn-powerzone rounded-pill px-4">
                            Düzenle
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@hizmet.Id"
                           class="btn btn-danger rounded-pill px-4">
                            Sil
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
           class="btn btn-outline-secondary">
            ← Geri Dön
        </a>
    </div>
</div>
