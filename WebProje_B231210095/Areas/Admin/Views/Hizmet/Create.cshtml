@model WebProje_B231210095.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-5" style="max-width: 650px;">
    <h2 class="text-center fw-bold mb-4">Yeni Hizmet Ekle</h2>

    <form asp-action="Create" method="post"
          class="shadow p-4 rounded bg-white">

        <div class="mb-3">
            <label class="form-label fw-semibold">Hizmet Adı</label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Süre (Dakika)</label>
            <input asp-for="SureDakika" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Açıklama</label>
            <textarea asp-for="Aciklama"
                      class="form-control"
                      rows="3"></textarea>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index"
               class="btn btn-outline-secondary">
                ← Geri Dön
            </a>

            <button type="submit"
                    class="btn custom-btn rounded-pill px-4">
                Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
