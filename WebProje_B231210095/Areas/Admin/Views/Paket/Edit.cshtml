@model WebProje_B231210095.Models.Paket

<h2 class="text-center fw-bold mb-4">Paket Düzenle</h2>

<div class="container" style="max-width:650px;">
    <form method="post" class="shadow p-4 rounded bg-white">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Paket Adı</label>
            <input asp-for="Ad" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Hizmet</label>
            <select asp-for="HizmetId"
                    asp-items="ViewBag.Hizmetler"
                    class="form-select">
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Süre (gün)</label>
            <input asp-for="SureGun" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Ücret (₺)</label>
            <input asp-for="Ucret" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control"></textarea>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                ← Geri Dön
            </a>
            <button type="submit" class="btn btn-success rounded-pill px-4">
                Güncelle
            </button>
        </div>

    </form>
</div>
