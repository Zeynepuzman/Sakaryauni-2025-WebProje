@model WebProje_B231210095.Models.Paket

<h2 class="text-center fw-bold mb-4">Yeni Paket Ekle</h2>

<div class="container" style="max-width:650px;">
    <form asp-area="Admin"
          asp-controller="Paket"
          asp-action="Create"
          method="post"
          class="shadow p-4 rounded bg-white">


        <div class="mb-3">
            <label class="form-label fw-semibold">Paket Adı</label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Hizmet</label>
            <select asp-for="HizmetId"
                    asp-items="ViewBag.Hizmetler"
                    class="form-select">
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Süre (gün)</label>
            <input asp-for="SureGun" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Ücret (₺)</label>
            <input asp-for="Ucret" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control"></textarea>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                ← Geri Dön
            </a>
            <button type="submit" class="btn btn-powerzone rounded-pill px-4">
                Kaydet
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
