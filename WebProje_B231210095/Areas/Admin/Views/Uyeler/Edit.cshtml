@model WebProje_B231210095.Models.Uye

@{
    ViewData["Title"] = "Üye Düzenle";
}

<div class="container mt-5" style="max-width: 650px;">
    <h2 class="text-center fw-bold mb-4">Üye Düzenle</h2>

    <form asp-area="Admin" asp-controller="Uyeler" asp-action="Edit" method="post" class="shadow p-4 rounded bg-white">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Ad Soyad</label>
            <input asp-for="AdSoyad" class="form-control" />
            <span asp-validation-for="AdSoyad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Telefon</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Yaş</label>
            <input asp-for="Yas" class="form-control" />
            <span asp-validation-for="Yas" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Boy (cm)</label>
            <input asp-for="Boy" class="form-control" />
            <span asp-validation-for="Boy" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Kilo (kg)</label>
            <input asp-for="Kilo" class="form-control" />
            <span asp-validation-for="Kilo" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">← Geri Dön</a>
            <button type="submit" class="btn custom-btn px-4 rounded-pill">Kaydet</button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
