@model WebProje_B231210095.Models.Antrenor

@{
    ViewData["Title"] = "Antrenör Sil";
}

<div class="container mt-5" style="max-width: 650px;">
    <div class="shadow p-4 rounded bg-white">
        <h2 class="text-center fw-bold mb-4 text-danger">Antrenörü Sil</h2>

        <div class="alert alert-warning text-center">
            <strong>@Model.AdSoyad</strong> adlı antrenörü silmek istediğinizden emin misiniz?
        </div>

        <div class="mb-3">
            <strong>Ad Soyad:</strong> @Model.AdSoyad
        </div>
        <div class="mb-3">
            <strong>Uzmanlık:</strong> @Model.Uzmanlik
        </div>
        <div class="mb-3">
            <strong>Telefon:</strong> @Model.Telefon
        </div>
        <div class="mb-3">
            <strong>Email:</strong> @Model.Email
        </div>

        <form method="post" asp-action="Delete" asp-route-id="@Model.Id" asp-area="Admin" asp-controller="Antrenor">
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">← Geri Dön</a>
                <button type="submit" class="btn btn-danger px-4">Sil</button>
            </div>
        </form>
    </div>
</div>
