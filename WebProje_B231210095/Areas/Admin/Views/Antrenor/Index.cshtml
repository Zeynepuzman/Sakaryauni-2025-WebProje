@model IEnumerable<WebProje_B231210095.Models.Antrenor>

<h2>Antrenör Yönetimi</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Yeni Antrenör Ekle</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AdSoyad</td>
                <td>@item.Uzmanlik</td>
                <td>@item.Telefon</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
