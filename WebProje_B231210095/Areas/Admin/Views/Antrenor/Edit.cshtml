@model WebProje_B231210095.Models.Antrenor

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<div class="container mt-5" style="max-width: 650px;">
    <h2 class="text-center fw-bold mb-4">Antrenör Düzenle</h2>

    <form asp-action="Edit" asp-controller="Antrenor" asp-area="Admin" method="post" class="shadow p-4 rounded bg-white">

        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Ad Soyad -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Ad Soyad</label>
            <input asp-for="AdSoyad" class="form-control" placeholder="Ad Soyad giriniz" />
            <span asp-validation-for="AdSoyad" class="text-danger"></span>
        </div>

        <!-- Uzmanlık -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Uzmanlık</label>
            <input asp-for="Uzmanlik" class="form-control" placeholder="Ör: Fitness, Pilates..." />
            <span asp-validation-for="Uzmanlik" class="text-danger"></span>
        </div>

        <!-- Telefon -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Telefon</label>
            <input asp-for="Telefon" class="form-control" placeholder="Telefon numarası" />
            <span asp-validation-for="Telefon" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Email adresi" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Salon ID (Sabit) -->
        <input type="hidden" asp-for="SalonId" value="1" />

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">← Geri Dön</a>
            <button type="submit" class="btn custom-btn px-4">Kaydet</button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
