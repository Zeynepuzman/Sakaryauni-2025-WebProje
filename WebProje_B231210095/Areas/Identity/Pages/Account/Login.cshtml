@page
@model LoginModel
@{
    ViewData["Title"] = "Kullanıcı Girişi";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <h3 class="text-center mb-3">Hesabınıza giriş yapın</h3>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Şifre -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Şifre" />
                <label asp-for="Input.Password">Şifre</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Beni Hatırla -->
            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                    Beni Hatırla
                </label>
            </div>

            <!-- Giriş Yap Butonu -->
            <button type="submit" class="w-100 btn btn-lg" style="background-color:#116062; color:white;">
                Giriş Yap
            </button>

            <div class="mt-3 text-center">
                Henüz üye değil misiniz?
                <a href="/Identity/Account/Register" style="color:#116062; font-weight:bold;">
                    Hemen Üye Ol
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
