@model WebProje_B231210095.Models.Uye

<h2 class="fw-bold text-center mb-4">Profilimi Düzenle</h2>

<div class="container" style="max-width:600px;">
    <form method="post" class="shadow p-4 rounded bg-white">

        <div class="mb-3">
            <label>Ad Soyad</label>
            <input asp-for="AdSoyad" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Telefon</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Yaş</label>
            <input asp-for="Yas" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Boy (cm)</label>
            <input asp-for="Boy" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Kilo (kg)</label>
            <input asp-for="Kilo" class="form-control" />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                ← Geri Dön
            </a>

            <button class="btn btn-powerzone rounded-pill px-4">
                Kaydet
            </button>
        </div>
    </form>
</div>
