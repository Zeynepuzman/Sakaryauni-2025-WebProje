<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProje_B231210095</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProje_B231210095.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm py-3">
            <div class="container">

                <!-- POWERZONE LOGO / BRAND -->
                <a class="navbar-brand fw-bold" href="/" style="font-size: 28px; color: #116062;">
                    Power<span style="color:#0d4d50;">Zone</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <!-- SOLDAN GELEN MENÜLER (Artık Anasayfa yok) -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- boş bırakıyoruz -->
                    </ul>

                    <!-- SAĞ TARAF: Giriş Butonları -->
                    <div class="d-flex gap-2">

                        <a href="/Identity/Account/Login" class="custom-btn-outline px-4 py-2 rounded-pill">
                            Kullanıcı Girişi
                        </a>

                        <a href="/Admin/Login" class="custom-btn px-4 py-2 rounded-pill">
                            Admin Girişi
                        </a>

                    </div>

                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PowerZone - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
