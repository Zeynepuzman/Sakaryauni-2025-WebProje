@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="services-page">

    <!-- Üst Başlık -->
    <section class="services-hero text-center">
        <h1 class="services-title">Hizmetlerimiz</h1>
        <p class="services-subtitle">
            Hedeflerine ulaşman için PowerZone'da ihtiyacın olan her şey bir arada.
        </p>
    </section>

    <!-- 1. BÖLÜM: MODERN KARTLAR (7 ADET) -->
    <section class="services-grid container">
        <div class="row g-4">

            <!-- Fitness & Serbest Ağırlık Alanı -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="service-card">
                    <div class="service-icon">🏋️</div>
                    <h3 class="service-heading">Fitness & Serbest Ağırlık Alanı</h3>
                    <p class="service-text">
                        Modern ekipmanlarla özgürce antrenman yapın, gücünüzü keşfedin.
                    </p>
                </div>
            </div>

            <!-- Grup Dersleri -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="service-card">
                    <div class="service-icon">🤸</div>
                    <h3 class="service-heading">Grup Dersleri</h3>
                    <p class="service-text">
                        Zumba, Pilates, Yoga ve daha fazlasıyla enerjiyi hissedin.
                    </p>
                </div>
            </div>

            <!-- Kişisel Antrenör (PT) -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="service-card">
                    <div class="service-icon">🧑‍🏫</div>
                    <h3 class="service-heading">Kişisel Antrenör (PT)</h3>
                    <p class="service-text">
                        Hedeflerinize özel, birebir programlarla daha hızlı ilerleyin.
                    </p>
                </div>
            </div>

            <!-- Vücut Analizi -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="service-card">
                    <div class="service-icon">🧪</div>
                    <h3 class="service-heading">Vücut Analizi</h3>
                    <p class="service-text">
                        Profesyonel ölçüm cihazlarıyla gelişiminizi bilimsel olarak takip edin.
                    </p>
                </div>
            </div>

            <!-- Spa–Sauna / Dinlenme Alanı -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="service-card">
                    <div class="service-icon">🔥</div>
                    <h3 class="service-heading">Spa – Sauna / Dinlenme</h3>
                    <p class="service-text">
                        Antrenman sonrası rahatlayın, yenilenin ve enerji depolayın.
                    </p>
                </div>
            </div>

            <!-- Kardiyo Alanı -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="service-card">
                    <div class="service-icon">❤️‍🔥</div>
                    <h3 class="service-heading">Kardiyo Alanı</h3>
                    <p class="service-text">
                        Treadmill, bisiklet, kürek ve daha fazlasıyla dayanıklılığınızı artırın.
                    </p>
                </div>
            </div>

            <!-- Fonksiyonel Antrenman Alanı -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="service-card">
                    <div class="service-icon">🧗</div>
                    <h3 class="service-heading">Fonksiyonel Antrenman Alanı</h3>
                    <p class="service-text">
                        Crossfit, HIIT ve fonksiyonel ekipmanlarla etkili antrenmanlar yapın.
                    </p>
                </div>
            </div>

        </div>
    </section>

    <!-- 2. BÖLÜM: FOTOĞRAFLI PREMIUM KARTLAR -->
    <section class="premium-services container mt-5">
        <div class="row g-4">

            <!-- Kişisel Antrenör Premium Kart -->
            <div class="container my-5">

                <h2 class="fw-bold text-center mb-4">Premium Hizmetler</h2>

                <div class="row g-4">

                    <!-- Kart 1 -->
                    <div class="col-md-6">
                        <div class="premium-card premium-pt">
                            <div class="premium-content">
                                <h3>Kişisel Antrenör – Premium Hizmet</h3>
                                <p>Profesyonel antrenörlerimizle birebir çalışarak hedeflerinize daha hızlı ve güvenli şekilde ulaşın.</p>
                                <a class="premium-btn">Detaylı Bilgi</a>
                            </div>
                        </div>
                    </div>

                    <!-- Kart 2 -->
                    <div class="col-md-6">
                        <div class="premium-card premium-group">
                            <div class="premium-content">
                                <h3>Grup Dersleri ile Enerjiyi Hissedin</h3>
                                <p>Zumba, Pilates, Yoga ve daha fazlasıyla motive edici, eğlenceli bir ortamda spor yapın.</p>
                                <a class="premium-btn">Ders Programını Gör</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


        </div>
    </section>

</div>
